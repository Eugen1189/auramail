[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    alembic/versions,
    htmlcov,
    instance,
    .pytest_cache,
    frontend/node_modules
ignore =
    E203,
    E501,
    W503,
    F401
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

