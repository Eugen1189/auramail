[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    alembic/versions,
    htmlcov,
    instance,
    .pytest_cache,
    frontend/node_modules
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by other tools)
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

